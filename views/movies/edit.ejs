<% include ../partials/header %>
	<form action="/movies/<%=movie._id%>/?_method=PUT" method="POST">
		<input type="text" name="movie[title]" value="<%= movie.title %>">
		<input type="text" name="movie[photo]" value="<%= movie.photo %>">
		<input type="number" name="movie[year]" value="<%= movie.year %>" min="1900" step="1">
		<input type="text" name="movie[genre]" value="<%= movie.genre %>">
		<input type="text" name="movie[country]" value="<%= movie.country %>">
		<textarea name="movie[description]"><%= movie.description %></textarea>
		<input type="submit" value="Update movie">
	</form>
<% include ../partials/footer %>